---
import Layout from '../../layouts/Layout.astro';
import TenseCard from '../../components/TenseCard.astro';
import { tenses } from '../../data/tenses';

const levels = ['A1-A2', 'B1-B2', 'C1'];
---

<Layout title="All Tenses">
  <div class="max-w-5xl mx-auto">
    <div class="mb-12 text-center md:text-left">
      <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight text-zinc-900 dark:text-white mb-4">English Tenses</h1>
      <p class="text-lg text-zinc-600 dark:text-zinc-400">Select a tense to start learning. Grouped by difficulty level.</p>
    </div>

    <div class="space-y-16">
      {levels.map((level) => {
        const levelTenses = tenses.filter(t => t.level === level);
        if (levelTenses.length === 0) return null;

        return (
          <section>
            <div class="flex items-center gap-4 mb-8">
              <h2 class="text-2xl font-bold text-zinc-800 dark:text-zinc-200">{level} Level</h2>
              <div class="h-px bg-zinc-200 dark:bg-zinc-800 flex-1"></div>
            </div>
            <div class="grid md:grid-cols-2 gap-6">
              {levelTenses.map(tense => (
                <TenseCard tense={tense} />
              ))}
            </div>
          </section>
        );
      })}
    </div>
  </div>
</Layout>
