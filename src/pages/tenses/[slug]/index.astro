---
import Layout from '../../../layouts/Layout.astro';
import { tenses } from '../../../data/tenses';

export function getStaticPaths() {
  return tenses.map(tense => ({
    params: { slug: tense.slug },
    props: { tense },
  }));
}

const { tense } = Astro.props;
---

<Layout title={tense.name}>
  <div class="mb-12">
    <a href="/tenses" class="group inline-flex items-center gap-2 text-zinc-500 dark:text-zinc-400 hover:text-blue-600 dark:hover:text-blue-400 text-sm font-medium mb-6 transition-colors">
      <span class="w-6 h-6 rounded-full bg-zinc-100 dark:bg-zinc-800 flex items-center justify-center group-hover:bg-blue-100 dark:group-hover:bg-blue-900/30 transition-colors">&larr;</span>
      Back to Tenses
    </a>
    <div class="flex flex-col md:flex-row md:items-center gap-4 md:gap-6">
      <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight text-zinc-900 dark:text-white">{tense.name}</h1>
      <span class="self-start px-3 py-1 bg-zinc-100 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-lg text-sm font-bold text-zinc-600 dark:text-zinc-300">
        {tense.level}
      </span>
    </div>
  </div>

  <div class="grid lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2 space-y-8">
      <!-- Usage Section -->
      <section class="bg-white dark:bg-zinc-900 p-8 rounded-3xl border border-zinc-100 dark:border-zinc-800/50 shadow-sm relative overflow-hidden group hover:shadow-md transition-shadow">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3 text-zinc-900 dark:text-white">
          <span class="w-10 h-10 rounded-xl bg-blue-50 dark:bg-zinc-800 text-blue-600 dark:text-blue-400 flex items-center justify-center text-lg shadow-sm group-hover:scale-110 transition-transform duration-300">?</span>
          When to use
        </h2>
        <div class="space-y-4 relative z-10">
          <div>
            <p class="text-lg text-zinc-700 dark:text-zinc-200 leading-relaxed font-medium">{tense.descriptionEN}</p>
            <p class="text-zinc-400 dark:text-zinc-500 italic mt-2 text-base">{tense.descriptionIDHint}</p>
          </div>
        </div>
      </section>

      <!-- Patterns Section -->
      <section class="bg-white dark:bg-zinc-900 p-8 rounded-3xl border border-zinc-100 dark:border-zinc-800/50 shadow-sm group hover:shadow-md transition-shadow">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3 text-zinc-900 dark:text-white">
          <span class="w-10 h-10 rounded-xl bg-violet-50 dark:bg-zinc-800 text-violet-600 dark:text-violet-400 flex items-center justify-center text-lg shadow-sm group-hover:scale-110 transition-transform duration-300">ƒ</span>
          Patterns
        </h2>
        <div class="grid md:grid-cols-3 gap-4">
          <div class="p-5 bg-zinc-50 dark:bg-zinc-900 rounded-2xl border border-zinc-100 dark:border-zinc-700/50 group/item hover:border-emerald-200 dark:hover:border-emerald-500/30 transition-colors">
            <span class="text-xs font-bold text-emerald-600 dark:text-emerald-400 uppercase tracking-wider block mb-2">Positive (+)</span>
            <code class="text-sm font-bold text-zinc-700 dark:text-zinc-200 block bg-white dark:bg-zinc-950 p-2 rounded-lg border border-zinc-100 dark:border-zinc-800">{tense.patterns.affirmative}</code>
          </div>
          <div class="p-5 bg-zinc-50 dark:bg-zinc-900 rounded-2xl border border-zinc-100 dark:border-zinc-700/50 group/item hover:border-rose-200 dark:hover:border-rose-500/30 transition-colors">
            <span class="text-xs font-bold text-rose-600 dark:text-rose-400 uppercase tracking-wider block mb-2">Negative (-)</span>
            <code class="text-sm font-bold text-zinc-700 dark:text-zinc-200 block bg-white dark:bg-zinc-950 p-2 rounded-lg border border-zinc-100 dark:border-zinc-800">{tense.patterns.negative}</code>
          </div>
          <div class="p-5 bg-zinc-50 dark:bg-zinc-900 rounded-2xl border border-zinc-100 dark:border-zinc-700/50 group/item hover:border-indigo-200 dark:hover:border-blue-500/30 transition-colors">
            <span class="text-xs font-bold text-indigo-600 dark:text-blue-400 uppercase tracking-wider block mb-2">Question (?)</span>
            <code class="text-sm font-bold text-zinc-700 dark:text-zinc-200 block bg-white dark:bg-zinc-950 p-2 rounded-lg border border-zinc-100 dark:border-zinc-800">{tense.patterns.interrogative}</code>
          </div>
        </div>
      </section>

      <!-- Examples Section -->
      <section class="bg-white dark:bg-zinc-900 p-8 rounded-3xl border border-zinc-100 dark:border-zinc-800/50 shadow-sm group hover:shadow-md transition-shadow">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3 text-zinc-900 dark:text-white">
          <span class="w-10 h-10 rounded-xl bg-orange-50 dark:bg-zinc-800 text-orange-600 dark:text-orange-400 flex items-center justify-center text-lg shadow-sm group-hover:scale-110 transition-transform duration-300">❝</span>
          Examples
        </h2>
        <div class="space-y-3">
          {tense.examples.map(ex => (
            <div class="flex gap-4 items-start p-4 hover:bg-zinc-50 dark:hover:bg-zinc-800/50 rounded-xl transition-colors group">
              <span class={`mt-1 font-bold text-xs px-2.5 py-1 rounded-md shadow-sm border ${
                ex.type === 'positive' ? 'bg-emerald-50 text-emerald-700 border-emerald-100 dark:bg-emerald-900/20 dark:text-emerald-300 dark:border-emerald-800' :
                ex.type === 'negative' ? 'bg-rose-50 text-rose-700 border-rose-100 dark:bg-rose-900/20 dark:text-rose-300 dark:border-rose-800' : 
                'bg-indigo-50 text-indigo-700 border-indigo-100 dark:bg-indigo-900/20 dark:text-indigo-300 dark:border-indigo-800'
              }`}>
                {ex.type === 'positive' ? '+' : ex.type === 'negative' ? '-' : '?'}
              </span>
              <div>
                <p class="text-zinc-800 dark:text-zinc-100 font-medium group-hover:text-indigo-600 dark:group-hover:text-blue-300 transition-colors">{ex.textEN}</p>
                <p class="text-zinc-400 dark:text-zinc-500 text-sm italic mt-0.5">{ex.textIDHint}</p>
              </div>
            </div>
          ))}
        </div>
      </section>
    </div>

    <!-- CTA Sidebar -->
    <div class="lg:col-span-1">
      <div class="sticky top-28 bg-zinc-900 dark:bg-zinc-800 rounded-3xl p-8 text-center text-white shadow-xl shadow-zinc-200 dark:shadow-black/50 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full blur-3xl -mr-16 -mt-16"></div>
        <div class="absolute bottom-0 left-0 w-32 h-32 bg-indigo-500/20 rounded-full blur-3xl -ml-16 -mb-16"></div>
        
        <h3 class="text-2xl font-bold mb-3 relative z-10">Ready to test?</h3>
        <p class="text-zinc-400 mb-8 text-sm relative z-10">Take a quick 5-question quiz to check your understanding.</p>
        <a href={`/tenses/${tense.slug}/test`} class="block w-full py-4 bg-white text-zinc-900 dark:bg-indigo-500 dark:text-white font-bold rounded-xl transition-all shadow-lg text-sm uppercase tracking-wide hover:scale-105 active:scale-95 relative z-10">
          Start Quiz
        </a>
      </div>
    </div>
  </div>
</Layout>
